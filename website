<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Filipino Propers Project</title>
    <!-- Use the Inter font from Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <!-- Load Tailwind CSS from CDN for styling -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f3f4f6;
        }
    </style>
</head>
<body class="flex flex-col items-center justify-center min-h-screen text-gray-800 p-4 sm:p-6">

    <!-- Main Container -->
    <div class="w-full max-w-2xl bg-white rounded-2xl shadow-xl overflow-hidden">
        
        <!-- Header Section -->
        <header class="bg-gray-800 text-white p-6 sm:p-8">
            <h1 class="text-3xl sm:text-4xl font-bold mb-2">My Sheet Music Library</h1>
            <p class="text-sm sm:text-base text-gray-400">A personal collection of compositions for the Mass.</p>
        </header>

        <!-- Sheet Music List Section -->
        <main class="p-6 sm:p-8">
            <h2 class="text-xl sm:text-2xl font-semibold mb-4 text-center">Available Compositions</h2>
            
            <!-- List Container - The JavaScript will populate this -->
            <div id="music-container" class="space-y-8">
                <!-- Content will be inserted here by JavaScript -->
            </div>
        </main>
        
    </div>

    <script>
        // A nested data structure to organize your sheet music by liturgical category.
        // To add a new category, add an object to this array.
        // To add a new Sunday or Solemnity, add an object to the 'items' array.
        const liturgicalData = [
            {
                category: "Sundays",
                items: [
                    {
                        name: "First Sunday of Advent",
                        pieces: [
                            {
                                title: "Introit for Advent I",
                                description: "The Introit for the First Sunday of Advent.",
                                pdfPath: "advent_i_introit.pdf" 
                            },
                            {
                                title: "Communion for Advent I",
                                description: "The Communion for the First Sunday of Advent.",
                                pdfPath: "advent_i_communion.pdf"
                            }
                        ]
                    },
                    {
                        name: "Second Sunday of Advent",
                        pieces: [
                            {
                                title: "Introit for Advent II",
                                description: "The Introit for the Second Sunday of Advent.",
                                pdfPath: "advent_ii_introit.pdf"
                            },
                            {
                                title: "Communion for Advent II",
                                description: "The Communion for the Second Sunday of Advent.",
                                pdfPath: "advent_ii_communion.pdf"
                            }
                        ]
                    }
                ]
            },
            {
                category: "Solemnities",
                items: [
                    {
                        name: "Immaculate Conception",
                        pieces: [
                            {
                                title: "Introit for the Immaculate Conception",
                                description: "The Introit for the Solemnity of the Immaculate Conception.",
                                pdfPath: "immaculate_conception_introit.pdf"
                            },
                            {
                                title: "Communion for the Immaculate Conception",
                                description: "The Communion for the Solemnity of the Immaculate Conception.",
                                pdfPath: "immaculate_conception_communion.pdf"
                            }
                        ]
                    }
                ]
            }
        ];

        // Get the main container for the music
        const musicContainer = document.getElementById('music-container');

        // Loop through each liturgical category
        liturgicalData.forEach(category => {
            // Create a heading for the category (e.g., "Sundays")
            const categoryHeading = document.createElement('h3');
            categoryHeading.classList.add('text-xl', 'sm:text-2xl', 'font-bold', 'text-center', 'text-gray-700', 'mt-6', 'mb-2');
            categoryHeading.textContent = category.category;
            musicContainer.appendChild(categoryHeading);

            // Create a container for the items within this category
            const categoryList = document.createElement('ul');
            categoryList.classList.add('space-y-4');
            musicContainer.appendChild(categoryList);

            // Loop through each item in the category (e.g., "First Sunday of Advent")
            category.items.forEach(item => {
                // Create a sub-heading for the specific day
                const itemHeading = document.createElement('h4');
                itemHeading.classList.add('text-lg', 'font-semibold', 'text-gray-800', 'ml-4', 'mt-4');
                itemHeading.textContent = item.name;
                categoryList.appendChild(itemHeading);

                // Loop through the pieces for that day (e.g., Introit, Communion)
                item.pieces.forEach(piece => {
                    const listItem = document.createElement('li');
                    listItem.classList.add('p-4', 'bg-gray-50', 'rounded-xl', 'shadow-md', 'hover:shadow-lg', 'transition-shadow', 'duration-200');
                    
                    // Set the inner HTML to display the piece's info and link to the PDF
                    listItem.innerHTML = `
                        <a href="${piece.pdfPath}" target="_blank" class="block">
                            <h5 class="text-base sm:text-lg font-bold text-gray-900">${piece.title}</h5>
                            <p class="text-sm text-gray-700">${piece.description}</p>
                        </a>
                    `;
                    categoryList.appendChild(listItem);
                });
            });
        });
    </script>
</body>
</html>
